@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model ColourCoordination.Models.Outfit

<div class="colour-content">
    <form action="@(Url.Action("PostSetPantsColor"))" method="post">
        <img src="https://ficardo-weddings.com/images/tshirt-drawing/white-t-shirt-essential.jpg" />
        <select name="@Html.NameFor(x => x.PantsColor)">
            <option value="red">Red</option>
            <option value="green">Gren</option>
            <option value="blue">Bloo</option>
            <option value="yellow">Yell-o</option>
            <option value="orange">Oranj</option>
            <option value="purple">Prupul</option>
        </select>
        
        <input type="submit" value="El Clicko">
    </form>
</div>